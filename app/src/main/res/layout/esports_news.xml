<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/esports_article_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A6000000"
        android:orientation="vertical">


        <TextView
            android:id="@+id/esports_news_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#96ff45"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/esports_news_content"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/esport_news_feedlabel"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/secret_url"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/favoritebutton"
            android:button="@drawable/ic_baseline_bookmark_24"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></CheckBox>


    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
