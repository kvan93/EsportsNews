<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_favorites"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/favorites_row"
        android:background="#A6000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favorites_news_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#96ff45"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/favorites_news_content"
            android:textColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/favorites_news_feedlabel"
                android:textColor="#FFFFFF"
                android:layout_width="0dp"
                android:layout_weight="4"

                android:layout_height="match_parent"
                android:textStyle="italic" />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"

                app:strokeColor="@color/white"
                app:cornerRadius="500dp"
                app:strokeWidth="1dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:id="@+id/single_favorite_delete"
                android:textColor="@color/white"
                android:text="X"
                app:iconSize="24dp"
                app:iconGravity="textStart"
                android:padding="0dp"
                app:iconPadding="0dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"

                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
                >

            </Button>
        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/favorites_secret_url"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/guidId"
            android:visibility="gone"/>



    </LinearLayout>

</androidx.cardview.widget.CardView>